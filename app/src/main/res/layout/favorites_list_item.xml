<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    android:backgroundTint="@color/favori_arka">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/kategori_Icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fish"
                android:layout_marginTop="0dp"
                android:padding="4dp" />
            <TextView
                android:id="@+id/nameOfRestaurant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0.45"
                android:fontFamily="sans-serif"
                android:textColor="#833135"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Kalinos Balıkçı" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageOfRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dikd_rtgen_6"
            android:src="@drawable/dikd_rtgen_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/adresOfRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#833135"
                android:textSize="12sp"
                android:text="Lorem ipsum bla" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_favori_bar"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/phoneResim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/phone_ikon" />

            <ImageView
                android:id="@+id/mapResim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/harita_ikon" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""/>

            <ImageView
                android:id="@+id/sepetResmi"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:srcCompat="@drawable/cop_ikon" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>